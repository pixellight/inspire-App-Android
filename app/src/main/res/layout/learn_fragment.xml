            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/treatmentWithXYREM"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/marginTen"
                android:orientation="horizontal"
                android:paddingStart="@dimen/marginTen"

                >

                <ImageView
                    android:id="@+id/imageViewtreatmentWithXYREM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/treatment_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:id="@+id/treatmentWithXYREMImageBackground"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
