            <android.support.constraint.ConstraintLayout
                android:id="@+id/sleepHabitquioz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/marginTen"
                android:orientation="horizontal"
                android:paddingStart="@dimen/marginTen"

                >

                <ImageView
                    android:id="@+id/imageViewsleepHabitquioz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sleep_habits_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:id="@+id/sleepHabitquiozImageBackground"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/icon_background"
