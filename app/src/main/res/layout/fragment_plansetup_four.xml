<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/actionLayoutFour"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical">

            <myapp.net.inspire.font.AvenirRoman
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_between_doses"
                android:textColor="@color/planBackground"
                android:textSize="@dimen/font_24sp" />

            <myapp.net.inspire.font.AvenirMedium
                android:id="@+id/nap1TimeTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="@string/prescribe_time_description"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18sp" />



            <NumberPicker
                android:id="@+id/doseFourWakeTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:theme="@style/LanguagePickerTheme"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/actionLayoutFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/previousFourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="@dimen/margin_32dp"
                android:background="@drawable/previous_button" />

            <ImageButton
                android:id="@+id/nextFourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginRight="@dimen/margin_32dp"
                android:background="@drawable/button_next" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>