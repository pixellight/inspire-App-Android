<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/eventLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/planBackground"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_8dp"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirMedium
                        android:id="@+id/rightDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:gravity="right"
                        android:text="Wednesday 2/6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirMedium
                        android:id="@+id/leftDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:gravity="left"
                        android:text="Thursday 2/7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blackDim"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="left"
                        android:padding="@dimen/margin_8dp"
                        android:text="Event"

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:padding="@dimen/margin_8dp"
                        android:text="Scheduled"

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/margin_8dp"
                        android:text="Actual"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/napOneLayoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/napOneTodaysPlanLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <myapp.net.inspire.font.AvenirRoman
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="left"
                            android:padding="@dimen/margin_8dp"
                            android:text="Nap 1"

                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napOneTodaysPlan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:gravity="center"
                            android:padding="@dimen/margin_8dp"
                            android:text=""

                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napOneAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="center_horizontal|right"
                            android:padding="@dimen/margin_8dp"
                            android:text="...   "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/planBackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/napTwoLayoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/napTwoTodaysPlanLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <myapp.net.inspire.font.AvenirRoman
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="left"
                            android:padding="@dimen/margin_8dp"
                            android:text="Nap 2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napTwoTodaysPlan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:gravity="center"
                            android:padding="@dimen/margin_8dp"
                            android:text=""

                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napTwoAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="center_horizontal|right"
                            android:padding="@dimen/margin_8dp"
                            android:text="...   "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/planBackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/napThreeLayoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/napThreeTodaysPlanLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <myapp.net.inspire.font.AvenirRoman
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="left"
                            android:padding="@dimen/margin_8dp"
                            android:text="Nap 3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napThreeTodaysPlan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:gravity="center"
                            android:padding="@dimen/margin_8dp"
                            android:text=""

                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />

                        <myapp.net.inspire.font.AvenirRoman
                            android:id="@+id/napThreeAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_16dp"
                            android:layout_weight="0.33"
                            android:gravity="center_horizontal|right"
                            android:padding="@dimen/margin_8dp"
                            android:text="...   "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/planBackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eatByTodaysPlanLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirRoman
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="left"
                        android:padding="@dimen/margin_8dp"
                        android:text="Eat by"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/eatByTodaysPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:padding="@dimen/margin_8dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:padding="@dimen/margin_8dp">

                        <CheckBox
                            android:id="@+id/eatByAction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black"
                            android:buttonTint="@color/colorGreen"
                           />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/planBackground" />

                <LinearLayout
                    android:id="@+id/doseOneTodaysPlanLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirRoman
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="left"
                        android:padding="@dimen/margin_8dp"
                        android:text="Dose 1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/doseOneTodaysPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:padding="@dimen/margin_8dp"
                        android:text=""

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/doseOneAction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|right"
                        android:padding="@dimen/margin_8dp"
                        android:text="...   "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/planBackground" />

                <LinearLayout
                    android:id="@+id/doseTwoTodaysPlanLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirRoman
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="left"
                        android:padding="@dimen/margin_8dp"
                        android:text="Dose 2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/doseTwoTodaysPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:padding="@dimen/margin_8dp"
                        android:text=""

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/doseTwoAction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|right"
                        android:padding="@dimen/margin_8dp"
                        android:text="...   "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/planBackground" />

                <LinearLayout
                    android:id="@+id/wakeTodaysPlanLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <myapp.net.inspire.font.AvenirRoman
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="left"
                        android:padding="@dimen/margin_8dp"
                        android:text="Wake"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/wakeTodaysPlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:padding="@dimen/margin_8dp"
                        android:text=""

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/wakeAction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|right"
                        android:padding="@dimen/margin_8dp"
                        android:text="...   "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/planBackground" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tipsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginRight="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_32dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:background="@drawable/status_background">

                    <LinearLayout
                        android:id="@+id/progressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:layout_marginLeft="@dimen/margin_32dp"
                        android:layout_marginRight="@dimen/margin_32dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Previous"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <myapp.net.inspire.font.AvenirMedium
                                android:id="@+id/previousTextViewTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wake Scheduled"
                                android:textColor="@color/colorLightGrey" />

                            <myapp.net.inspire.font.AvenirMedium
                                android:id="@+id/previousTextViewTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9 hr 57 mins ago"
                                android:textColor="@color/colorLightGrey"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Up Next"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <myapp.net.inspire.font.AvenirMedium
                                android:id="@+id/upNextTextViewTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Eat by Scheduled"
                                android:textColor="@color/colorLightGrey" />

                            <myapp.net.inspire.font.AvenirMedium
                                android:id="@+id/upNextTextViewTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="in 4 hr 57 mins"
                                android:textColor="@color/colorLightGrey"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <SeekBar
                        android:id="@+id/seekbarIndicator"
                        style="@style/MySeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:minHeight="10dp"
                        android:minWidth="15dp"
                        android:maxHeight="15dp"
                        android:maxWidth="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:layout_marginLeft="@dimen/margin_16dp"
                        android:layout_marginRight="@dimen/margin_16dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_custom_thumb"
                         />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:background="@color/colorGrey"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_8dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/tip_icon_placeholder" />

                    <myapp.net.inspire.font.AvenirRoman
                        android:id="@+id/tipsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_32dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="1dp"
                        android:text="@string/motivation_quotes"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/defaultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <myapp.net.inspire.font.AvenirRoman
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Your plan is currently suspended."
            android:textColor="@color/black"
            android:textSize="@dimen/font_14sp" />

        <ImageButton
            android:id="@+id/resumePlanBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin_8dp"
            android:background="@drawable/button_resume" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inspireDefulatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_8dp"
            android:src="@drawable/inspire_plus_logo" />
    </RelativeLayout>


</LinearLayout>